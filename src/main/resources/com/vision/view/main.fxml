<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vision.controller.MainController">
   <top>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"
                         text="Vision Processor - Conversor y Editor de Imágenes" />
                  <Button fx:id="loadImageButton" text="Cargar Imagen" />
               </children>
            </HBox>
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <!-- El contenido se cargará programáticamente desde el MainController -->
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label style="-fx-font-size: 11px; -fx-text-fill: #7F8C8D;"
                   text="Vision Processor App - Desarrollado con JavaFX 17" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
