<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.vision.controller.MainController">
   <top>
      <VBox spacing="10.0" style="-fx-background-color: #F8F9FA;">
         <children>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"
                         text="Vision Processor" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="loadImageButton" 
                          text="Cargar Imagen" 
                          style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;" />
                  <Button fx:id="loadDefaultImageButton" 
                          text="Imagen Predeterminada" 
                          style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;" />
                  <Button fx:id="loadPowerOfTwoImageButton"
                          text="Imagen Fourier (256x256)"
                          style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;" />
               </children>
               <padding>
                  <Insets top="10.0" right="15.0" bottom="5.0" left="15.0" />
               </padding>
            </HBox>
            <Label style="-fx-font-size: 12px; -fx-text-fill: #7F8C8D; -fx-padding: 0 15 5 15;"
                   text="Procesamiento de im치genes y conversi칩n de espacios de color" />
            <Separator />
         </children>
      </VBox>
   </top>
   
   <center>
      <TabPane fx:id="moduleTabPane" tabClosingPolicy="UNAVAILABLE" side="TOP">
         <!-- Los tabs se cargar치n program치ticamente desde el MainController -->
      </TabPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #F8F9FA;">
         <children>
            <Label style="-fx-font-size: 10px; -fx-text-fill: #95A5A6;"
                   text="Vision Processor v1.0 - Arquitectura Modular con JavaFX 17" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
